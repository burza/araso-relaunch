!!!
%html
  %head
    %meta{'charset' => 'utf-8'}
    - title = yield(:title)
    %title= title.blank? ? "Gregor Swatek - Frontend-Engineer und Agile Design Prophet" : "Gregor Swatek - " + title
    %meta{'name' => 'keywords', 'content' => yield(:meta_keywords)}/
    %meta{'name' => 'description', 'content' => yield(:meta_description)}/
    = stylesheet_link_tag "application", :media => "all"
    = csrf_meta_tags
    %meta{'name' => 'googlebot', 'content' => 'all,index,follow,noodp'}/
    %meta{'name' => 'viewport', 'content' => 'width=device-width, initial-scale=1.0'}/
    %meta{'name' => 'apple-mobile-web-app-capable', 'content' => 'yes'}/
    
    
    %link{'href' => 'http://fonts.googleapis.com/css?family=Open+Sans:300,400', 'rel' => 'stylesheet', 'type' => 'text/css'}
    %link{'href' => 'http://fonts.googleapis.com/css?family=Droid+Serif:400,700,400italic', 'rel' => 'stylesheet', 'type' => 'text/css'}
    %link{'href' => 'http://fonts.googleapis.com/css?family=Merriweather:400,400italic,700', 'rel' => 'stylesheet', 'type' => 'text/css'}
    %link{'rel' => 'apple-touch-icon-precomposed', 'sizes' => '144x144', 'href' => image_path('icons/apple-touch-icon-144-precomposed.png')}
    %link{'rel' => 'apple-touch-icon-precomposed', 'sizes' => '114x114', 'href' => image_path('icons/apple-touch-icon-114-precomposed.png')}
    %link{'rel' => 'apple-touch-icon-precomposed', 'sizes' => '72x72', 'href' => image_path('icons/apple-touch-icon-72-precomposed.png')}
    %link{'rel' => 'apple-touch-icon-precomposed', 'href' => image_path('icons/apple-touch-icon-57-precomposed.png')}
    %link{'rel' => 'shortcut icon', 'href' => image_path('icons/favicon3.png')}
    
    /[if lt IE 9]
      %script{'src' => 'http://html5shiv.googlecode.com/svn/trunk/html5.js'}/
    
  %body
    .navbar.navbar-fixed-top.reset-navbar-styles
      .navbar-inner
        .container
          %button.btn-navbar{ 'type' => 'button', 'data-toggle' => 'collapse', 'data-target' => '.nav-collapse' }
            %i.icon-list
          %a.brand{ 'href' => '#' } Agile Media
          .nav-collapse.collapse
            %ul.nav.pull-right
              %li.active
                %a{'href' => '#home'}
                  %i.icon-home.icon-white
                  %span.hidden-desktop Home
                  
              %li
                %a{'href' => '#services'} Leistungen
              %li
                %a{'href' => '#projects'} Projekte
              %li
                %a{'href' => '#about'} Ãœber mich
              %li
                %a{'href' => '#contact'} Kontakt
    = yield
    = javascript_include_tag "application"
  

